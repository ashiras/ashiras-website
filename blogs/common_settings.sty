\usepackage{fancyhdr} % ヘッダーとフッターをカスタマイズするパッケージ
\pagestyle{fancy} % fancyhdr を有効化

\fancyhf{} % 左ページと右ページの外側を空にする
\fancyhead[LE]{\nouppercase{\leftmark}} % 左ページの左側に章タイトル
\fancyhead[RO]{\nouppercase{\rightmark}} % 右ページの右側に節タイトル

% ヘッダーの下にラインを引く
\makeatletter
\setlength{\headwidth}{\dimexpr\textwidth+\marginparsep+10mm\relax}
\renewcommand{\headrule}{%
  \hrule width\headwidth height\headrulewidth \vspace{0.5ex}%
}
\makeatother

% フッターの設定
\fancyfoot[LE,RO]{} % 左ページと右ページの外側を空にする
\fancyfoot[CE,CO]{\thepage} % ページ番号を中央に表示

% 定理環境の設定
\newtcbtheorem[number within=section]{Definition}{定義}%
{colback=white!5,colframe=red!45!black,fonttitle=\bfseries,sharp corners}{def}

\newtcbtheorem[number within=section]{Observation}{観察}%
{colback=white!5,colframe=blue!45!black,fonttitle=\bfseries,sharp corners}{obs}

\newtcbtheorem[number within=section]{Hypothesis}{仮説}%
{colback=white!5,colframe=white!45!black,fonttitle=\bfseries,sharp corners}{hyp}

% ページレイアウト
\geometry{
    top=25mm,
    bottom=25mm,
    inner=20mm, % 内側（綴じ側）
    outer=20mm  % 外側
}

\usepackage{tocloft}
\usepackage{indentfirst} % 最初の段落にインデントを付ける

% フォント設定
\setmainfont{Times New Roman}
\setCJKmainfont{Hiragino Kaku Gothic ProN}

% 段落設定
\setlength{\parskip}{0.4em}
\linespread{1.2}

% itemize 環境の余白を調整
\usepackage{enumitem}
% itemize 環境の余白を調整
\setlist[itemize]{itemsep=0pt, topsep=0.5em, parsep=0pt, partopsep=0pt}

% コラム
\usepackage{tcolorbox}
% コラム用のスタイルを定義
\tcbset{
  mycolumn/.style={
    colback=white!5!white, % 背景色
    colframe=blue!75!black, % 枠線の色
    fonttitle=\bfseries, % タイトルのフォント
    coltitle=white, % タイトルの文字色
    sharp corners, % 角を直線にする
    boxrule=0.5mm, % 枠線の太さ
    width=\textwidth, % ボックスの幅
    left=1em, % 左の余白
    right=1em, % 右の余白
    top=1em, % 上の余白
    bottom=1em, % 下の余白
  }
}
